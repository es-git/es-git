{
  "compilerOptions": {
    "outDir": "./es",
    "allowJs": false,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es2018",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2019",
      "dom"
    ]
  },
  "include": [
    "packages/*/ts/**/*.ts"
  ],
  "compileOnSave": true
}